<%- include("../partials/head") %>
    <title>Log In</title>
    <link rel="shortcut icon" href="/Images/Trekidoo_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="../Login/login.css">
    </head>

    <body>
        <%- include("../partials/header") %>
            <section>
                <div class="color"></div>
                <div class="color"></div>
                <div class="color"></div>
                <div class="box">
                    <div class="square" style="--i:0;"></div>
                    <div class="square" style="--i:1;"></div>
                    <div class="square" style="--i:2;"></div>
                    <div class="square" style="--i:3;"></div>
                    <div class="square" style="--i:4;"></div>
                    <div class="container">
                        <div class="form">
                            <h2>Sign in</h2>
                            <form action="/login" method="POST">
                                <div class="inputbox">
                                    <input type="text" name="email" placeholder="E-mail" required>
                                </div>
                                <div class="inputbox">
                                    <input class="inputPassword" type="password" name="password" placeholder="Password"
                                        required>
                                    <div class="eyesContainer">
                                        <img class="eyes" id="eye" src="/Images/eye-solid.svg" alt="" />
                                        <img class="eyes" id="slashedEye" src="/Images/eye-slash-solid.svg" alt="" />
                                    </div>
                                </div>
                                <p id="wrongPassword">
                                    <%= wrongPassword %>
                                </p>
                                <button type="submit" class="button">Sign in</button>
                            </form>
                            <div class="forget-container">
                                <a href="/forget" class="forget">Forget password ?</a>
                                <a href="/register" class="forget">Don't have an account ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <script src="../Login/app.js"></script>
    </body>

    </html>